<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>org.takuo.mbedremounter</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>ProgramArguments</key>
    <array>
      <string>/bin/bash</string>
      <string>/usr/local/share/mbedremounter/mbedremounter.sh</string>
    </array>
    <key>StartOnMount</key>
    <true/>
  </dict>
</plist>

